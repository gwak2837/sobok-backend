{
  "name": "sobok-backend",
  "version": "0.1.0",
  "description": "sobok-backend",
  "main": "dist/index.js",
  "repository": "https://github.com/teamsindy20/sobok-backend.git",
  "author": "sindy",
  "license": "GPL-3.0-only",
  "private": true,
  "engines": {
    "node": ">=14.17.5"
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon -r dotenv/config src/index.ts dotenv_config_path=.env.development --trace-warnings",
    "build": "rm -rf dist && tsc && copyfiles --up 1 src/**/*.{graphql,sql} dist/",
    "start": "NODE_ENV=production node -r dotenv/config dist/index.js",
    "test": "NODE_ENV=test nodemon -r dotenv/config test/index.ts dotenv_config_path=.env.test --trace-warnings --watch test",
    "format": "prettier . --write --ignore-path .gitignore",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "type": "tsc --pretty --noEmit",
    "pre-push": "yarn format && yarn lint && yarn type",
    "generate": "graphql-codegen --config codegen.yml",
    "generate-db": "schemats postgres postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}/${POSTGRES_DB} -c -o src/database/sobok.ts && prettier src/database/sobok.ts --write",
    "postinstall": "[ -d '.husky' ] && husky install || true"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.3.2",
    "@graphql-tools/merge": "^8.0.1",
    "@graphql-tools/schema": "^8.1.1",
    "apollo-server-express": "^3.1.2",
    "bcryptjs": "^2.4.3",
    "concurrently": "^6.2.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.10.0",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.7.1",
    "pg-format": "^1.0.4",
    "redis": "^3.1.2"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.0.0",
    "@graphql-codegen/cli": "2.0.1",
    "@graphql-codegen/typescript": "2.0.0",
    "@graphql-codegen/typescript-resolvers": "2.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/graphql-fields": "^1.3.4",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^16.6.1",
    "@types/passport": "^1.0.7",
    "@types/passport-facebook": "^2.1.11",
    "@types/passport-google-oauth20": "^2.0.9",
    "@types/pg": "^8.6.1",
    "@types/pg-format": "^1.0.2",
    "@types/redis": "^2.8.31",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "@vramework/schemats": "^0.0.7",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  }
}
