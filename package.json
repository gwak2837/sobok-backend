{
  "name": "sobok-backend",
  "version": "0.1.0",
  "description": "sobok-backend",
  "main": "dist/index.js",
  "repository": "https://github.com/teamsindy20/sobok-backend.git",
  "author": "sindy",
  "license": "GPL-3.0-only",
  "private": false,
  "engines": {
    "node": ">=14.17.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/index.ts --trace-warnings",
    "build": "rm -rf dist && tsc && copyfiles --up 1 src/**/*.{graphql,sql} dist/",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "NODE_ENV=test nodemon test/index.ts --trace-warnings --watch test",
    "format": "prettier . --write --ignore-path .gitignore",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "type": "tsc --pretty --noEmit",
    "pre-push": "yarn format && yarn lint && yarn type",
    "generate": "graphql-codegen --config codegen.yml",
    "prepare": "husky install"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.3.2",
    "@graphql-tools/merge": "^6.2.14",
    "@graphql-tools/schema": "^7.1.5",
    "apollo-server-express": "^2.25.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.9.3",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.6.0",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-resolvers": "1.19.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql-fields": "^1.3.3",
    "@types/jest": "^27.0.0",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^15.6.1",
    "@types/passport": "^1.0.6",
    "@types/passport-facebook": "^2.1.10",
    "@types/passport-google-oauth20": "^2.0.7",
    "@types/pg": "^8.6.0",
    "@types/pg-format": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
